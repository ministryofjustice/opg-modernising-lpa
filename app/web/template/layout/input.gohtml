{{ define "input" }}
  <div class="govuk-form-group {{ if index .top.Errors .name }}govuk-form-group--error{{ end }}">
    <label class="{{ if .boldLabel }}govuk-heading-m{{ else }}govuk-label{{ end }}" for="f-{{ .name }}">{{ tr .top.App .label }}</label>
    {{ if .context }}
      <p class="govuk-body">
        {{ tr .top.App .context }}
      </p>
    {{ end }}
    {{ if .hint }}
      <div id="{{ .name }} }}-hint" class="govuk-hint">
        {{ tr .top.App .hint }}
      </div>
    {{ end }}
    {{ template "error-message" (errorMessage .top .name) }}
    <input class="govuk-input {{ .classes }} {{ if index .top.Errors .name }}govuk-input--error{{ end }}" id="f-{{ .name }}" name="{{ .name }}" value="{{ .value }}" {{ if .autocomplete }}autocomplete="{{ .autocomplete }}"{{ end }} {{ if .spellcheck }}spellcheck="{{ .spellcheck }}"{{ end }} {{ if .type }}type="{{ .type }}"{{ end }} />
  </div>
{{ end }}
