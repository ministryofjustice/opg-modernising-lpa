{{ template "page" . }}

{{ define "pageTitle" }}
    {{ if .App.SupporterData }}
        {{ tr .App "whatIsYourEmail" }}
    {{ else }}
        {{ tr .App "enterYourEmailAddress" }}
    {{ end }}
{{ end }}

{{ define "main" }}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form novalidate method="post">
                {{ if .App.SupporterData }}
                    {{ template "input" (input . "email" "whatIsYourEmailOptional"
                        .Form.Email
                        "classes" "govuk-input--width-20"
                        "type" "email"
                        "spellcheck" "false"
                        "autocomplete" "email"
                        "heading" true) }}
                {{ else }}
                    {{ template "input" (input . "email" "enterYourEmailAddress"
                        .Form.Email
                        "classes" "govuk-input--width-20"
                        "type" "email"
                        "spellcheck" "false"
                        "autocomplete" "email"
                        "heading" true
                        "context" "weWillSendUpdatesToThisAddress") }}
                {{ end }}

                {{ if .CanTaskList }}
                    {{ template "buttons" (button .App "saveAndContinue") }}
                {{ else }}
                    {{ template "button" (button .App "saveAndContinue") }}
                {{ end }}

                {{ template "csrf-field" . }}
            </form>
        </div>
    </div>
{{ end }}
